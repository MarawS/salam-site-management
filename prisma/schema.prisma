datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Site {
  id               Int      @id @default(autoincrement())
  siteId           String   @unique @map("site_id")
  legacyId         String?  @map("legacy_id")
  region5          String
  region13         String
  city             String
  district         String
  latitude         Float
  longitude        Float
  installationDate DateTime @map("installation_date")
  status           String   @default("Active")
  technicianName   String   @map("technician_name")
  technicianEmail  String   @map("technician_email")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@map("sites")
}